<!DOCTYPE html>
<html>
<head>
  <title>Barbecues</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application', defer: true %>
  <%= csrf_meta_tags %>
</head>
<body data-hook="controller-<%= controller_name %> action-<%= action_name %>">
  <header>
    <div class="container nav">
      <nav class="pull-right">
        <% if current_user %> 
          <ul class="nav nav-pills"> 
            <li role="presentation"><%= link_to current_user.name.capitalize, '#' %></li>
            <li role="presentation"><%= link_to current_user.email, '#'%></li>

            <li role="presentation" class="active" ><%= link_to "Log out", destroy_user_session_path %></li>
          </ul> 
        <% else %> 
          <ul> 
            <li role="presentation" class="active" ><%= link_to "Log In", new_user_session %></a></li> 
            <li role="presentation"><%= link_to "Register", new_user_registration %></a></li> 
          </ul> 
        <% end %>
      </nav>
    </div>
  </header>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
